            android:id="@+id/books_navigation" app:startDestination="@id/booksListFragment">

    <fragment android:id="@+id/booksListFragment"
              android:name="fr.benchaabane.presentationlayer.ui.books.listing.BooksListFragment"
              android:label="BooksListFragment"
              tools:layout="@layout/fragment_books_list">
        <action android:id="@+id/action_booksListFragment_to_bookDetailFragment"
