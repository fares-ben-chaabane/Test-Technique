<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent" android:layout_height="wrap_content"
                                   app:cardBackgroundColor="@color/white"
                                   app:cardCornerRadius="5dp"
                                   app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">

        <!-- Guidelines Views -->
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/end_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"/>

        <!-- Book Cover View -->
        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/book_cover_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"/>

        <!-- Book Title View -->
        <TextView
                android:id="@+id/book_title_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/book_cover_view"
                app:layout_constraintStart_toEndOf="@id/start_guideline"
                app:layout_constraintEnd_toStartOf="@id/end_guideline"
                android:gravity="start"
                android:fontFamily="sans-serif-condensed-medium"
                style="@style/TextViewStyle.Medium"
                tools:text="Book Title"/>

        <!-- Book Author View -->
        <TextView
                android:id="@+id/book_author_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/start_guideline"
                app:layout_constraintEnd_toStartOf="@id/end_guideline"
                app:layout_constraintTop_toBottomOf="@id/book_title_view"
                android:gravity="start"
                android:layout_marginTop="8dp"
                style="@style/TextViewStyle.Medium"
                tools:text="Written by Fares"/>

        <!-- Book Distribution View -->
        <TextView
                android:id="@+id/book_distribution_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/start_guideline"
                app:layout_constraintEnd_toStartOf="@id/end_guideline"
                app:layout_constraintTop_toBottomOf="@id/book_author_view"
                android:gravity="end"
                android:layout_marginTop="15dp"
                android:paddingBottom="10dp"
                android:fontFamily="serif"
                style="@style/TextViewStyle.Medium"
                tools:text="Distributed by Fares in 1989"/>

        <!-- Shadow View -->
        <View
                android:id="@+id/book_cover_shadow_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bg_shadow"
                app:layout_constraintTop_toTopOf="parent"/>

        <!-- Favorite View -->
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/book_favorite_view"
                android:visibility="gone"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/ic_favorite_empty"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>